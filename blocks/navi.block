                                    </li>
                                {.or}
                                    <li class="navi__sub__li">
                                        <a class="navi__sub__a meta js-navi-link" href="{collection.fullUrl}" data-uid="{collection.title|slugify}">{collection.title}</a>
                                    </li>
                                {.end}
                            {.end}
                        </ul>
                    {.end}
                </li>
            {.end}
        {.end}
