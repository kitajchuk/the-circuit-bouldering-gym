        {.repeated section items}
            {.if collection.passwordProtected}
                {# Silence is golden... #}
            {.or}
                <li class="navi__li {.folder?}js-navi-hovermenu{.end}">
                    <a class="navi__a {.folder?}navi__index{.end} btn js-navi-link {.folder?}js-navi-index{.end}" href="#{collection.fullUrl}" data-uid="{collection.title|slugify}">{collection.title}</a>
