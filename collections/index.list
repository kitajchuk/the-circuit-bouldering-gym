<article class="article">
    <header class="article__header cover cover--banner js-cover ghost -text--center">
        {.if collection.mainImage}
            <div class="cover__bg -cover js-lazy-image" data-img-src="{collection.mainImage.assetUrl}" data-variants="{collection.mainImage.systemDataVariants}" data-original-size="{collection.mainImage.originalSize}"></div>
        {.end}
        <div class="cover__screen overlay"></div>
        <div class="cover__content ghost__child -text--left -wrap-copy -wrap-mobile">
            <h1 class="h1 -light -wrap-head">
                {collection.title}
            </h1>
        </div>
    </header>
    <section class="cms -text--center -exp-2">
        <div class="article__body -wrap-copy -wrap-mobile -text--left">
            {.section collection}
                {.repeated section collections}
                    <a class="tile" href="{fullUrl}">
                        <img class="tile__image image js-lazy-image" data-img-src="{mainImage.assetUrl}" data-variants="{mainImage.systemDataVariants}" data-original-size="{mainImage.originalSize}" />
                        <div class="tile__screen overlay"></div>
                        <div class="tile__content ghost -wrap -text--center">
                            <div class="ghost__child">
                                <div class="btn btn--large">
                                    <span class="btn__icon">
                                        {@|apply svg-rocks.block}
                                    </span>
                                    <span class="btn__text">{title}</span>
                                </div>
                                <!-- <div class="tile__info h3 -light -wrap-head">{description|safe}</div> -->
                            </div>
                        </div>
                    </a>
                {.end}
            {.end}
        </div>
    </section>
</article>
