<squarespace:query collection="{collection.urlId}">
    {@|apply navi-location.block}
</squarespace:query>
<section class="item -exp">
    <article class="cms -text--center -exp-2">
        <div class="cms__blocks -wrap-copy -wrap-mobile -text--left">
            <div class="h2">
                <a href="{collection.fullUrl}">{collection.title}</a> / {item.title}
            </div>
        </div>
    </article>
</section>
