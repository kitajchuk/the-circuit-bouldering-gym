{@|apply header-banner.block}
<section class="gridwall -exp-2 -text--center">
    {.repeated section items}
        <summary class="product gridwall__item -column -column--1of3">
            <div class="gridwall__block">
                <a href="{fullUrl}" class="gridwall__link">
                    <img class="gridwall__image image js-lazy-image" data-img-src="{assetUrl}" data-variants="{systemDataVariants}" data-original-size="{originalSize}" />
                    <div class="gridwall__title h3">
                        {title}
                        {# product-price #}
                    </div>
                </a>
            </div>
        </summary>
    {.end}
</section>
