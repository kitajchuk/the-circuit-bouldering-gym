<article class="article">
    {.section item}
        {@|apply header-banner.block}
    {.end}
    <nav class="crumb meta -wrap -text--left -grey">
        <div class="crumb__li">
            <a href="{collection.fullUrl}">{collection.title}</a>
        </div>
        <div class="crumb__li">
            {item.title}
        </div>
    </nav>
    <section class="cms -exp-2">
        <div class="article__body">
            {item.body}
        </div>
    </section>
</article>
